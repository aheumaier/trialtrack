<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Question</th>
      <th>User</th>
      <th>Due date</th>
      <th>Answered at</th>
      <th>Value</th>
      <th>Value text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.id %></td>
        <td><%= answer.question %></td>
        <td><%= answer.user %></td>
        <td><%= answer.due_date %></td>
        <td><%= answer.answered_at %></td>
        <td><%= answer.value %></td>
        <td><%= answer.value_text %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
